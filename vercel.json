{
  "version": 2,
  "builds": [
    {
      "src": "wims/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "wims/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "wims.settings"
  },
  "buildCommand": "python3 manage.py collectstatic --noinput"
}
